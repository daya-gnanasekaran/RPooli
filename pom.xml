<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>eu.openanalytics</groupId>
    <artifactId>rpooli</artifactId>
    <packaging>war</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>R Pooli</name>
    <description>A pool of R nodes, exposed over RMI and managed over HTTP.</description>
    <url>http://openanalytics.eu</url>
    <organization>
        <name>OpenAnalytics BVBA</name>
        <url>http://openanalytics.eu</url>
    </organization>

    <properties>
        <rj.version>2.0.1-SNAPSHOT</rj.version>
        <rj.servi.version>2.0.0.b201406211200</rj.servi.version>
        <eruntime.version>1.4.0.b201406211200</eruntime.version>

        <java.version>1.7</java.version>
        <jetty-plugin.version>9.2.2.v20140723</jetty-plugin.version>
        <local.server.port>8889</local.server.port>
    </properties>

    <repositories>
        <repository>
            <id>oa-public</id>
            <name>OpenAnalytics Public Repository</name>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <url>http://nexus.openanalytics.eu/nexus/content/groups/public</url>
        </repository>
    </repositories>

    <distributionManagement>
        <snapshotRepository>
            <id>oa-nexus-snapshots</id>
            <name>OpenAnalytics Snapshots Repository</name>
            <url>http://nexus.internal.openanalytics.eu:8080/nexus/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>oa-nexus-releases</id>
            <name>OpenAnalytics Releases Repository</name>
            <url>http://nexus.internal.openanalytics.eu:8080/nexus/content/repositories/releases</url>
        </repository>
    </distributionManagement>

    <dependencies>
        <!-- RServi -->
        <dependency>
            <groupId>de.walware.rj</groupId>
            <artifactId>de.walware.rj.client</artifactId>
            <version>${rj.version}</version>
        </dependency>
        <dependency>
            <groupId>de.walware.rj</groupId>
            <artifactId>de.walware.rj.server</artifactId>
            <version>${rj.version}</version>
        </dependency>
        <dependency>
            <groupId>de.walware.rj</groupId>
            <artifactId>de.walware.rj.data</artifactId>
            <version>${rj.servi.version}</version>
        </dependency>
        <dependency>
            <groupId>de.walware.rj</groupId>
            <artifactId>de.walware.rj.servi</artifactId>
            <version>${rj.servi.version}</version>
        </dependency>
        <dependency>
            <groupId>de.walware.rj</groupId>
            <artifactId>de.walware.rj.services.eruntime</artifactId>
            <version>${eruntime.version}</version>
        </dependency>

        <!-- JavaX -->
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.5</version>
            <scope>provided</scope>
        </dependency>

        <!-- Tragedy of the commons -->
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.3.2</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>${jetty-plugin.version}</version>
                <configuration>
                    <webApp>
                        <contextPath>/rpooli</contextPath>
                    </webApp>
                    <httpConnector>
                        <port>${local.server.port}</port>
                    </httpConnector>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
